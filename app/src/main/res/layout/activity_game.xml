<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app_view.GameActivity">

    <EditText
        android:id="@+id/a_number_et"
        android:textSize="32dp"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_light"
        android:inputType="number"
        android:text="  "
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/operator_textView"
        android:layout_width="33dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:textColor="@android:color/holo_red_light"
        android:text=" "
        android:textStyle="bold"
        android:textSize="32dp"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/a_number_et"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/b_number_et"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_light"
        android:inputType="number"
        android:text="  "
        android:textSize="32dp"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/operator_textView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/equal_sign_tv"
        android:layout_width="33dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:textColor="@android:color/holo_red_light"
        android:text="="
        android:textStyle="bold"
        android:textSize="32dp"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/b_number_et"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/result_et"
        android:layout_width="58dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:ems="10"
        android:textStyle="bold"
        android:inputType="number"
        android:textColor="@android:color/holo_red_light"
        android:text="  "
        android:textSize="32dp"
        android:textAlignment="center"
        app:layout_constraintStart_toEndOf="@+id/equal_sign_tv"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="16dp"
        android:text="@android:string/ok"
        android:textStyle="bold"
        android:background="@color/button_color"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/b_number_et" />
</android.support.constraint.ConstraintLayout>